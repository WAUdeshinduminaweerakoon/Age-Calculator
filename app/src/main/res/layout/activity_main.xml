<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040922"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Age Calculator"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#151317"
        android:layout_margin="10dp"
        android:background="#41E352"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.498"

        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Age"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:layout_margin="8dp"
        android:background="#13631C"
        android:padding="10dp"


        />
    <Button
        android:id="@+id/buttonBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="select birthday"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:backgroundTint="#147E20"



        />
    <TextView
        android:id="@+id/inSelectedDayText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0/0/2023"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:background="#2B0A6D"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Day"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/inSecondsText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:background="#3D09A4"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seconds"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/inMinutesText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:background="#3D09A4"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/inHoursText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:background="#3D09A4"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hours"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/inDaysText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:background="#3D09A4"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        />

</LinearLayout>